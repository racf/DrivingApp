<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#2E2E2E"
    tools:context="mx.edu.cenidet.drivingapp.fragments.SpeedFragment">
    <!--TextView
        android:id="@+id/tvSpeed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/-->
    <ProgressBar
        android:id="@+id/pbSpeed"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_gravity="center"
        android:background="@drawable/circle_2"
        android:indeterminate="false"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/circle_1"
        android:rotation="-90"
        style="?android:attr/progressBarStyleHorizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLocation"
        android:text="Location"
        android:textColor="#ffff"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSpeed"
        android:text="Speeed"
        android:textColor="#ffff"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAcceleration"
        android:text="m/s2"
        android:textColor="#ffff"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>

    <include android:id="@+id/btnFloating" layout="@layout/floating_button"/>
</FrameLayout>
